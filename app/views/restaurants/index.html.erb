<h1 class="display-1">Restaurants</h1>
<div id="restaurants">
  
  <% @restaurants.each do |restaurant| %>
    <div class="p-3 card d-flex-inline flex-row justify-content-between align-items-center">
      <%= content_tag :h3, restaurant.name %>
      <%= link_to icon("fas", "angle-right", "See Detail"), restaurant_path(restaurant), class: "btn btn-dark" %>
    </div>
  <% end %>
  
</div>