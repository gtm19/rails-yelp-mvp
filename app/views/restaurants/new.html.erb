<h1 class="display-1">Add Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: "Restaurant Name" %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: @categories %>
  <%= f.submit "Create Restaurant", class: "btn btn-dark" %>
<% end %>
